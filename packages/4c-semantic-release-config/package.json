{
  "name": "@4c/semantic-release-config",
  "version": "0.0.0-development",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/4c-semantic-release-config.git"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    "lint":
      "eslint . && prettier --list-different --ignore-path .ignore '**/*.{json,css,md}'",
    "format":
      "eslint . --fix && prettier --write --ignore-path .eslintignore '**/*.{json,css,md}'",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "dependencies": {
    "@semantic-release/changelog": "^2.0.1",
    "@semantic-release/git": "^4.0.1",
    "@semantic-release/github": "^4.2.8",
    "@semantic-release/npm": "^3.2.2",
    "semantic-release-alt-publish-dir": "^1.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "eslint": "^4.16.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-config-4catalyzer": "^0.3.3",
    "travis-deploy-once": "^4.4.1",
    "semantic-release": "^15.1.4"
  }
}

{
  "name": "@4c/semantic-release-config",
  "version": "1.0.1",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/4c-semantic-release-config.git"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix && prettier --write '**/*.{json,css,md}'",
    "precommit": "lint-staged",
    "test": "npm run lint",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.{json,css,md}": ["prettier --write", "git add"]
  },
  "peerDependencies": {
    "semantic-release": "^15.0.0"
  },
  "dependencies": {
    "@semantic-release/changelog": "^2.0.1",
    "@semantic-release/git": "^4.0.1",
    "@semantic-release/github": "^4.2.8",
    "@semantic-release/npm": "^3.2.2",
    "semantic-release-alt-publish-dir": "^2.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.16.0",
    "eslint-config-4catalyzer": "^0.4.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-prettier": "^2.5.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.10.2",
    "semantic-release": "^15.1.5",
    "travis-deploy-once": "^4.4.1"
  }
}

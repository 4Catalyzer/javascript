{
  "private": true,
  "name": "javascript",
  "scripts": {
    "lint": "eslint packages/*/*.js",
    "test": "npm run lint && lerna run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "find-yarn-workspace-root": "^1.2.1",
    "husky": "^3.0.3",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
